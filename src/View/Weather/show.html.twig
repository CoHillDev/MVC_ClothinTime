{% extends 'Layout/column.html.twig' %}

{% block content %}

{% if weatherData %}
    <h2 class="city-weather">Well, the weather in {{ weatherData.name }}, {{ weatherData.sys.country }} 🥁</h2>

    <h2>is {{ weatherData.weather[0].description }} : {{ weatherData.main.temp|round }}°C feeling style</h2> 

    <img class="memes" src="{{ '/assets/images/weather/' ~ weatherData.description }}">
    <img class="memes" src="{{ weatherData.weather[0].icon_url }}">
    
    <p class="enjoy"> Enjoy your day 😘</p>

    {% else %}

{% include 'Weather/_form.html.twig' %}

{% endif %}

{% if error %}
    <p>{{ error }}</p>
{% endif %}

{% endblock %}